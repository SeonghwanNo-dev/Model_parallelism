SOURCE_FILE="./src/components/IPC.cpp"
COMPILER="g++"
OUTPUT_EXEC="a.out"

echo "--- 1. Compile Start: $SOURCE_FILE ---"
$COMPILER $SOURCE_FILE -o $OUTPUT_EXEC -Wall
if [ $? -eq 0 ]; then
    echo "--- Compile Success ---"
else
    echo "--- Compile Failure ---"
    exit 1
fi

echo "--- 2. Execute: ./$OUTPUT_EXEC ---"
./$OUTPUT_EXEC

echo ""
echo "--- End ---"